<% @categories.each do |item| %>
  <div class='card'>
    <div class='i-div'>
      <%= image_tag(item.icon, class: "img")%>
    </div>
    <div>
      <h2>
        <%= link_to item.name, category_records_path(item.id) %>
      </h2>
      <span>Total:$ <%= item.records.reduce(0) { |sum, item| sum + item.amount } %></span>
    </div>
  </div>
<% end %>
